{
  "name": "spiral-packages/validator",
  "description": "This is my package validator",
  "keywords": [
    "spiral-packages",
    "spiral",
    "validator"
  ],
  "homepage": "https://github.com/spiral-packages/validator",
  "license": "MIT",
  "authors": [
    {
      "name": "butschster",
      "email": "butschster@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "spiral/boot": "^2.9",
    "spiral/console": "^2.9",
    "symfony/validator": "^5.2|^6.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.5",
    "phpunit/phpunit": "^9.5",
    "spiral/testing": "^1.0",
    "vimeo/psalm": "^4.9"
  },
  "autoload": {
    "psr-4": {
      "Spiral\\Validation\\Symfony\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spiral\\Validation\\Symfony\\Tests\\App\\": "tests/app",
      "Spiral\\Validation\\Symfony\\Tests\\": "tests/src"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm --config=psalm.xml ./src"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "spiral": {
      "bootloaders": [
        "Spiral\\Validation\\Symfony\\Bootloader\\ValidationBootloader"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
